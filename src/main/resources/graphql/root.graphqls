type OrderConfirmation {
    id: Long
    reference: String
    invoiceDate: LocalDate
    deliveryDate: LocalDate
    currency: String
    cart: Cart
    confirmationKey: String
}

type Reward {
    rewardType: String
    points: Int
    rewardInfo: [RewardInfo]
}

type RewardInfo {
    language: String
    name: String
    description: String
}
